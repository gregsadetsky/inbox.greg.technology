{
    "version": "1.0",
    "services": {
        "web": {
            "port": 8080,
            "volumes": [{
                "name": "data",
                "destinationPath": "/data"
            }]
        },
        "mycron": {
            "type": "cron",
            "schedule": "*/1 * * * *",
            "command": "bash ./cron.sh",
            "volumes": [{
                "name": "data",
                "destinationPath": "/data"
            }]
        }
    }
}